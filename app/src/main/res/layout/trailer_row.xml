<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/touch_selector">
    <ImageView
        android:id="@+id/play_trailer_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_play_arrow_24dp"
        android:contentDescription="@string/play_trailer" />
    <TextView
        android:id="@+id/trailer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/watch_trailer_text"
        android:layout_toRightOf="@+id/play_trailer_icon"
        android:layout_toEndOf="@+id/play_trailer_icon"/>
    <TextView
        android:id="@+id/trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_toRightOf="@+id/trailer_title"
        android:layout_toEndOf="@+id/trailer_title"
        />
</RelativeLayout>
